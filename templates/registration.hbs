      border-collapse: separate !important; } .mailer-handlebar__container table
      td { box-sizing: border-box; padding: 0; font-size: 16px; vertical-align:
      top; } .mailer-handlebar__container table:first-child,
      .mailer-handlebar__container table:last-child { box-sizing: border-box;
      padding: 0; font-size: 16px; vertical-align: top; }
      .mailer-handlebar__description { box-sizing: border-box; width: 100%;
      margin-bottom: 15px; background: #ffffff; border: 1px solid #f0f0f0;
      padding: 30px; } .mailer-handlebar__title { box-sizing: border-box;
      color:#000; font-weight: 300; font-size: 30px; float: left }
      .mailer-handlebar__mail-container { width: 600px; max-width: 600px;
      margin: 0 auto !important; } .mailer-handlebar__content { box-sizing:
      border-box; display: block; max-width: 600px; margin: 0 auto; }
      .mailer-handlebar__message { margin: 0; margin-bottom: 20px; color: #000;
      font-size: 16px; font-weight: 300 } .mailer-handlebar__footer-content,
      .mailer-handlebar__info { color: #000; font-size: 12px; font-weight: 300;
      margin-bottom: 5px; margin: 10px 0 10px } .mailer-handlebar__info {
      font-size: 16px; } .mailer-handlebar__line { margin-top: 10px;
      border-bottom: solid #8fcfb5 } .mailer-handlebar__header { box-sizing:
      border-box; width: 100%; margin-top: 15px; } .mailer-handlebar__header
      table { background-color: #8fcfb5; padding: 0 30px !important; }
      .mailer-handlebar__header td { text-align: right; }
      .mailer-handlebar__action { box-sizing: border-box; padding: 0;
      background-color: #8fcfb5; border-radius: 2px; text-align: center; }
      .mailer-handlebar__action-table { margin-bottom: 10px; width: 60%
      !important; } .mailer-handlebar__action-link { box-sizing: border-box;
      border-color: #8fcfb5; font-weight: 400; text-decoration: none; display:
      inline-block; margin: 0; color: #000; background-color: #8fcfb5; border:
      solid 1px #8fcfb5; border-radius: 2px; font-size: 16px; padding: 12px
      45px; } .mailer-handlebar__footer { box-sizing: border-box; clear: both;
      width: 100%; font-size: 12px; padding: 0 30px; }
